            "needsManualSetup": {
              "type": "bool",
              "value": "[reference(resourceId('Microsoft.Resources/deploymentScripts', 'graph-permissions-script'), '2023-08-01').outputs.needsManualSetup]"
            },
            "statusMessage": {
