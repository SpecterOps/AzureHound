    "version": "0.2.0",
    "configurations": [
        {
            "name": "AzureHound: list (username/password/tenant)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": [
                "list",
                "--username",
                "${env:AZUREHOUND_USERNAME}",
                "--password",
                "${env:AZUREHOUND_PASSWORD}",
                "--tenant",
                "${env:AZUREHOUND_TENANT}",
                "--proxy",
                "${env:AZUREHOUND_PROXY}",
                "--output",
                "azurehound-results.json"
            ]
        }
    ]
}